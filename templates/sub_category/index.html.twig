{% extends '_main.html.twig' %}

{% block title %}{% trans %}SubCategory index{% endtrans %}{% endblock %}

{% import "_table.html.twig" as table %}
{% import "_buttons.html.twig" as buttons %}

{% block body %}
    <h1 class="font-sans px-8 py-4 rounded mt-0 mb-4 bg-white drop-shadow-sm text-xl font-bold">{% trans %}SubCategory index{% endtrans %}</h1>
    
    <table class="border-collapse table-auto w-full bg-white rounded text-left font-sans drop-shadow-md mb-8">
        <thead class="bg-slate-50">
            <tr>
                {{ table.th("Id"|trans) }}
                {{ table.th("Name"|trans) }}
                {{ table.th("Description"|trans) }}
                {{ table.th("Highlight"|trans) }}
                {{ table.th("actions"|trans) }}
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                {{ table.td(sub_category.id) }}
                {{ table.td(sub_category.name) }}
                {{ table.td(sub_category.description) }}
                {{ table.td(sub_category.highlight ? 'Yes' : 'No') }}

                {% set actions %}
                    <a href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}" class="underline pr-2 hidden">{% trans %}show{% endtrans %}</a>
                    <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" class="underline pr-2">{% trans %}edit{% endtrans %}</a>
                {% endset %}

                {{ table.td(actions, "w-48") }}
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{% trans %}no records found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ buttons.link(path('app_sub_category_new'), "Create new"|trans)}}
{% endblock %}
