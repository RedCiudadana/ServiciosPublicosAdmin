{% extends 'base.html.twig' %}

{% block title %}SubCategory index{% endblock %}

{% import "_table.html.twig" as table %}
{% import "_buttons.html.twig" as buttons %}

{% block body %}
    <h1 class="font-sans px-8 py-4 rounded mt-0 mb-4 bg-white drop-shadow-sm text-xl font-bold">SubCategory</h1>
    
    <table class="border-collapse table-auto w-full bg-white rounded text-left font-sans drop-shadow-md mb-8">
        <thead class="bg-slate-50">
            <tr>
                {{ table.th("Id") }}
                {{ table.th("Name") }}
                {{ table.th("Description") }}
                {{ table.th("Highlight") }}
                {{ table.th("actions") }}
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                {{ table.td(sub_category.id) }}
                {{ table.td(sub_category.name) }}
                {{ table.td(sub_category.description) }}
                {{ table.td(sub_category.highlight ? 'Yes' : 'No') }}

                {% set actions %}
                    <a href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}" class="underline pr-2">show</a>
                    <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" class="underline pr-2">edit</a>
                {% endset %}

                {{ table.td(actions, "w-48") }}
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ buttons.link(path('app_sub_category_new'), "Create new")}}
{% endblock %}
