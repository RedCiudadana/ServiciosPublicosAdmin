{% macro td(value, cssStyles = "", attributes = "") %}
  <td class="border-0 border-b border-slate-100 border-solid py-2 px-8 rounded {{cssStyles}}">
    {{ value }}
  </td>
{% endmacro %}

{% macro th(value, cssStyles = "") %}
  <th class="border-0 border-b border-slate-100 border-solid py-2 px-8 rounded {{cssStyles}}">{{ value }}</th>
{% endmacro %}