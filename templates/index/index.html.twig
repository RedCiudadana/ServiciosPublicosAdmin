{% extends '_main.html.twig' %}

{% block title %}{% trans %}Home{% endtrans %}{% endblock %}

{% block body %}
    <div class="row mx-auto my-4">
        <div class="container">
            <div class="w-100" style="background-image:url('{{ asset('img/SLIDER_02.png') }}');background-size:cover;    border-radius: 15px ">
                <div class="container" style="padding:6rem 0">
                    <div class="row justify-content-center">

                        <div class="col-lg-10 py-2 d-flex justify-content-center" >
                            <div class="col-lg-10 col-md-10 col-sm-12">
                                <h3 style="color: #fff!important; font-weight: 600; font-size: 20px; line-height: normal;"  class=" text-center">Le damos la bienvenida al catálogo de servicios donde podrás conocer los trámites de manera rápida, ágil y sencilla.</h3>
                            </div>
                        </div>  

                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="row mx-auto my-4 w-100">
        <div class="container">
            <div class="row w-100 justify-content-center px-4 m-0">
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="card card-custom card-stretch gutter-b p-4" style="max-height:150px!important;height:150px!important;display:flex;justify-content:center;text-align:center">
                        <h1>
                            {% trans %}Número de instituciones: {% endtrans %} {{ stats.countInsitutions[0].count_i }}
                        </h1>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="card card-custom card-stretch gutter-b p-4" style="max-height:150px!important;height:150px!important;display:flex;justify-content:center;text-align:center">
                        <h1>
                            {% trans %}Número de tramites: {% endtrans %} {{ stats.countPublicServices[0].count_ps }}
                        </h1>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card card-custom card-stretch gutter-b p-4">
                        <div class="flourish-embed flourish-hierarchy" data-src="visualisation/10668255"><script src="https://public.flourish.studio/resources/embed.js"></script></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
