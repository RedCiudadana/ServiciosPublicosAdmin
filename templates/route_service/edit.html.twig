{% extends '_main.html.twig' %}

{% import "_buttons.html.twig" as buttons %}

{% block title %}{% trans %}Edit Ruta de servicios{% endtrans %}{% endblock %}

{% block body %}
    <div class="col-lg-12">
        <div class="font-sans px-8 py-4 rounded mt-0 mb-4 bg-white drop-shadow-sm text-base font-bold">
            <a class="font-bold" href="{{ path('app_route_service_index') }}">{% trans %}Rutas de servicios{% endtrans %}</a>\ {% trans %}Edit{% endtrans %}
        </div>
        <div>
            {{ buttons.link(path('app_route_service_items', { id: route_service.id } ), "Servicios de rutas"|trans, "text-xs ml-auto mb-4") }}
        </div>
        <div class="border-collapse w-full bg-white rounded text-left font-sans drop-shadow-md mb-8 px-8 py-4">
            {{ include('route_service/_form.html.twig', {'button_label': 'Update'|trans}) }}
        </div>

        <div class="mb-4">
            {{ include('route_service/_delete_form.html.twig') }}
        </div>
    </div>

    <div class="col-lg-12 relative z-0">
        <h1 class="font-sans px-8 py-4 rounded mt-0 mb-4 bg-white shadow-sm text-xl font-bold relative">
            {% trans %}Servicios de rutas{% endtrans %}
        </h1>
    </div>

    <div class="col-lg-12 relative">
        <div class="table-responsive bg-white relative">
            <div {{ react_component('NodeChart',
                {
                    'nodes': nodesList,
                    'publicServiceData': public_service_data,
                    'route': route_service_data
                })
            }}>
                Loading... <i class="fas fa-cog fa-spin fa-3x"></i>
            </div>
        </div>
    </div>
{% endblock %}
