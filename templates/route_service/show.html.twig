{% extends 'base.html.twig' %}

{% block title %}Ruta de servicios{% endblock %}

{% block body %}
    <h1>Ruta de servicios</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ route_service.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ route_service.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ route_service.roles ? route_service.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ route_service.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_route_service_index') }}">{% trans %}back to list{% endtrans %}</a>

    <a href="{{ path('app_route_service_edit', {'id': route_service.id}) }}">{% trans %}edit{% endtrans %}</a>

    {{ include('route_service/_delete_form.html.twig') }}
{% endblock %}
