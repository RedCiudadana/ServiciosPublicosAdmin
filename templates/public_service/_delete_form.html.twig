<form method="post" action="{{ path('app_public_service_delete', {'id': public_service.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ public_service.id) }}">
    <hr>
    <button class="bg-red-700 text-white px-3 py-2 rounded font-bold">{% trans %}Delete{% endtrans %}</button>
</form>
