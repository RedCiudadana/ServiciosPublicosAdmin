<script>
  (function() {
      var costTypeSelect = document.getElementById('base_typeOfCost');
      costTypeSelect.addEventListener('change', function(e) {
          if (e.target.value === 'fixed') {
              document
                  .getElementById('base_cost')
                  .parentElement
                  .style.display = 'block';
              document
                  .getElementById('base_variableCostDescription')
                  .parentElement
                  .style.display = 'none';
          }

          if (e.target.value === 'variable') {
              document
                  .getElementById('base_cost')
                  .parentElement
                  .style.display = 'none';
              document
                  .getElementById('base_variableCostDescription')
                  .parentElement
                  .style.display = 'block';
          }
      });

    $(document).ready(function() {
        $('#base_subcategories').select2();
    });
  })()
</script>