{% extends '_main.html.twig' %}

{% block title %}PublicService{% endblock %}

{% block body %}
    <h1>PublicService</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ public_service.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ public_service.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ public_service.description }}</td>
            </tr>
            <tr>
                <th>Instructions</th>
                <td>{{ public_service.instructions }}</td>
            </tr>
            <tr>
                <th>Requirements</th>
                <td>{{ public_service.requirements }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ public_service.cost }}</td>
            </tr>
            <tr>
                <th>TimeResponse</th>
                <td>{{ public_service.timeResponse ? public_service.timeResponse.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
            </tr>
            <tr>
                <th>TypeOfDocumentObtainable</th>
                <td>{{ public_service.typeOfDocumentObtainable }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ public_service.url }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_public_service_index') }}">back to list</a>

    <a href="{{ path('app_public_service_edit', {'id': public_service.id}) }}">edit</a>

    {{ include('public_service/_delete_form.html.twig') }}
{% endblock %}
