{% extends '_main.html.twig' %}

{% import "_buttons.html.twig" as buttons %}

{% block title %}Edit PublicService{% endblock %}

{% block body %}
    <h1 class="font-sans px-8 py-4 rounded mt-0 mb-4 bg-white drop-shadow-sm text-xl font-bold">
        Edit PublicService
    </h1>

    {% if is_granted('ROLE_ADMIN') %}
        <div class="w-full flex">
            {{ buttons.link_text(
                path('app_public_service_history', { id: public_service.id }),
                "History",
                "ml-auto mb-2"
            ) }}
        </div>
    {% endif %}

    <div class="border-collapse w-full bg-white rounded text-left font-sans drop-shadow-md mb-8 px-8 py-4">
        {{ include('public_service/_form.html.twig', {'button_label': 'Update'}) }}
    </div>

    <a class="font-bold" href="{{ path('app_public_service_index') }}">back to list</a>

    {{ include('public_service/_delete_form.html.twig') }}
{% endblock %}
