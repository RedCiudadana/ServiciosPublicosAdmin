{% block title %}{% trans %}User index{% endtrans %}{% endblock %}

{% block body %}
    <div class="row w-full">
        <div class="col-lg-12">
            <h1 class="font-sans px-8 py-4 rounded mt-0 mb-4 bg-white drop-shadow-sm text-xl font-bold">{% trans %}Add institution{% endtrans %}</h1>
        </div>
        <div class="col-lg-12">
